@using StoreApp.Infrastruckte.Extensions
@model Product


<div class="col-sm-12 col-md-4  my-2">

<div class="card" style="width: 18rem;">
    <div class="card-header text-center">

        @Model.ProductName
    </div>



  <img src="@Model?.ImageUrl" class="card-img-top" alt="...">
  <div class="card-body">
      <div class="card-text"> 
          <div class="text-danger lead-2"> @Model?.Price</div>
      </div>
            <p class="card-text"> @Model?.summary</p>

   
      <div class="btn-group">
     <form id="@Model.ProductId" asp-page="/cart" method="post">

         <input type="hidden" asp-for="ProductId" />
         <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

                    <button type="submit" class="btn btn-outline-secondary">
               <i class="fa fa-cart-plus"></i>
            </button>
        </form>

    <a class="btn btn-outline-secondary" asp-controller="Product" asp-action="get" asp-route-id="@Model.ProductId">

                <i class="fa-solid fa-arrow-right"></i>  
            </a>
            </div>
        </div>
</div>
</div>



